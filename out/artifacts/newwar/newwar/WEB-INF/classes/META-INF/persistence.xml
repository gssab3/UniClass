<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="DBUniversityPU" transaction-type="JTA">
        <jta-data-source>jdbc/UniversityDS</jta-data-source>
        <properties>
            <!-- Specifiche di Hibernate -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="DBUniClassPU" transaction-type="JTA">
        <jta-data-source>jdbc/UniClassDS</jta-data-source>
        <properties>
            <!-- Specifiche di Hibernate -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>

</persistence>
